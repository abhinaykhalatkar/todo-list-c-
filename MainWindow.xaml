<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <ListBox Name="taskLBx" Margin="10,0,0,0" Height="400" Width="237" VerticalAlignment="Center" HorizontalAlignment="Left" SelectionChanged="taskLBx_SelectionChanged"/>
        <TextBox Name="taskTBx" FontSize="20" HorizontalAlignment="Left" Height="30" Margin="300,17,0,0" TextWrapping="Wrap" Text="Enter a task" VerticalAlignment="Top" Width="226" KeyDown="taskTBx_KeyDown" />
        <Button Name="addBtn" Content="Add" HorizontalAlignment="Left" Height="30" Margin="300,70,0,0" VerticalAlignment="Top" Width="100"  IsEnabled="False" Click="addBtn_Click"/>
        <Button Name="deleteBtn" Content="Delete" HorizontalAlignment="Left" Height="30" Margin="423,70,0,0" VerticalAlignment="Top" Width="103"  IsEnabled="False" Click="deleteBtn_Click"/>

    </Grid>
</Window>
